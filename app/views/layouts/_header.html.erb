<header class="pb-2 flex items-center justify-between bg-pink-500 text-pink-100">
  <%= render 'layouts/logo' %>
  <div class="mr-5 flex items-center font-bold space-x-3">
    <% if user_signed_in? %>
      <%= link_to current_user.username.upcase, edit_user_registration_path, class: "text-sm text-white" %>
      <%= link_to image_tag("power.svg", width: "40"), destroy_user_session_path, data: {turbo_method: :delete}, class: ""  %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "py-2 px-4 md:px-6 bg-pink-100 text-pink-600 rounded shadow" %>
      <%= link_to "Login", new_user_session_path, class: "py-2 px-4 md:px-6 border border-pink-100 rounded shadow" %>
    <% end %>
  </div>
</header>