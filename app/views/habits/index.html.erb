<div class="flex flex-col items-center space-y-6">
  <h2
			class="p-5 text-3xl md:text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-pink-600 via-purple-600 to-pink-800 ">
    Track Your Habits</h2>
  <div class="pb-16 w-full md:w-3/4 lg:w-1/2">
    <%= turbo_frame_tag "new_habit" do %>
      <%= render 'form', habit: @habit %>
    <% end %>
  </div>
  <%= turbo_frame_tag("habits", class: "contents space-y-6") do %>
    <%= render @habits %>
  <% end %>
</div>