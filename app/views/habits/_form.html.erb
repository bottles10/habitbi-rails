<%= form_with(model: habit, class: "w-full") do |form| %>
  <% if habit.errors.any? %>
    <p class="pb-2 text-sm font-bold text-center text-rose-500 animate-bounce"><%= habit.errors.full_messages.to_sentence %></p>
  <% end %>
  <div class="flex justify-center">
    <%= form.text_field :name, html_input: {placeholder: "eg: Hicking"}, class: "w-2/3 text-center text-sm focus:border-pink-400 focus:ring-0 border border-pink-400 caret-pink-500 rounded-l-2xl" %>
    <%= form.submit(class: "cursor-pointer w-1/3 py-3 px-2 text-xs md:text-sm font-bold bg-pink-600 text-pink-100 rounded-r-2xl") %>
  </div>
<% end %>